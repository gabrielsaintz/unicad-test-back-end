{
	"compilerOptions": {
		"sourceMap": true,
		"target": "ES2020",
		"lib": ["esnext", "es5", "es6", "ES2020"],
		"module": "commonjs",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"files": true
	}
}
